<div class="center">
<h1>All Bloggers</h1>

<!-- to add page numbers -->
<div class="center_pagination digg_pagination">
    <div class=”col-lg-4 col-md-4 col-sm-5 col-xs-6 pagination-info”>
    <%= will_paginate @articles %>
        <span class=”pull-right”>
            <%= page_entries_info(@articles) %>
        </span>
    </div>
</div>

    <!--  to add gravatr img username and articles number -->
    <% @users.each do |user| %>
        <div class="listing">
            <div class="row">
                <div class="jumbotron1 center_users_list well col-md-4 col-md-offset-4">

                    <li>
                        <%= link_to gravatar_for(user), user_path(user) %>
                    </li>

                    <li class="article-title">
                        <%= link_to user.username, user_path(user) %>
                    </li>

                    <li>
                        <small>
                            <%= pluralize(user.articles.count, "article") if user.articles %>
                        </small>
                    </li>

                    <% if logged_in? && current_user.admin? %>
                        <li>
                            <%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user and their all articles?" }, class: "btn btn-sm btn-danger" %>
                        </li>
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
</div>

<h2 class="center">Title: 
    <%= @article.title %>
</h2>
<div class="jumbotron1">
<div class="well col-xs-8 col-xs-offset-2">

<% if @article.user %>
    <div class="center listing">
            <div class="row">
                <div class="jumbotron1 center_users_list well col-md-4 col-md-offset-4">
                    <li>
                        Created By:
                    </li>

                    <li>
                        <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
                    </li>

                    <li class="article-title">
                        <%= link_to @article.user.username, user_path(@article.user) %>
                    </li>

                    <li>
                        <small>
                            <%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>
                        </small>
                    </li>
                </div>
            </div>
    </div>
<% end %>
    <h4 class="center" id="decription_custom">
        <strong>Description:</strong>
    </h4>
    <hr>
    <%= simple_format(@article.description) %>

    <div class="article-actions">
        <% if logged_in? && current_user == @article.user %>
            <!-- Link for Edit Article -->
            <%= link_to "Edit This Article", edit_article_path(@article), class: "btn btn-sm btn-primary" %>

            <%= link_to "Delete This Article", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-sm btn-danger" %>
            <!-- Link for go back to all listing articles -->
        <% end %>
            <%= link_to "Back to Articles Listing", articles_path, class: "btn btn-sm btn-success" %>
    </div>
</div>
</div>
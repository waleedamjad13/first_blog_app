<h2 class="center">Title: 
    <%= @article.title %>
</h2>

<div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center description">
        <strong>Description</strong>
    </h4>
    <hr>
    <%= simple_format(@article.description) %>

    
<div class="article-actions">
    <!-- Link for Edit Article -->
    <%= link_to "Edit This Article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>

    <%= link_to "Delete This Article", article_path(@article, test: "testing"), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
    <!-- Link for go back to all listing articles -->
    <%= link_to "Back to Articles Listing", articles_path, class: "btn btn-xs btn-success" %>
</div>